<?xml version="1.0" encoding="utf-8"?>
<!-- 本周打卡列表小组件 - 日历网格视图 -->
<!-- 参考设计: screenshots/checkin_weekly_widget2/screen.png -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendar_today_widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_calendar_today_list_background"
    android:padding="12dp">

    <!-- 空状态提示 -->
    <TextView
        android:id="@+id/calendar_today_empty_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="暂无打卡数据\n点击添加打卡项目"
        android:textColor="#9ca3af"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone" />

    <!-- 日历主内容 -->
    <LinearLayout
        android:id="@+id/calendar_today_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 月份标题 -->
        <TextView
            android:id="@+id/calendar_month_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="五月"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1f2937"
            android:layout_marginBottom="8dp" />

        <!-- 星期标题行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView android:id="@+id/week_header_1" style="@style/CalendarTodayWeekHeader" android:text="一" />
            <TextView android:id="@+id/week_header_2" style="@style/CalendarTodayWeekHeader" android:text="二" />
            <TextView android:id="@+id/week_header_3" style="@style/CalendarTodayWeekHeader" android:text="三" />
            <TextView android:id="@+id/week_header_4" style="@style/CalendarTodayWeekHeader" android:text="四" />
            <TextView android:id="@+id/week_header_5" style="@style/CalendarTodayWeekHeader" android:text="五" />
            <TextView android:id="@+id/week_header_6" style="@style/CalendarTodayWeekHeader" android:text="六" />
            <TextView android:id="@+id/week_header_7" style="@style/CalendarTodayWeekHeader" android:text="日" />
        </LinearLayout>

        <!-- 日期数字行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <TextView android:id="@+id/day_number_1" style="@style/CalendarTodayDayNumber" android:text="13" />
            <TextView android:id="@+id/day_number_2" style="@style/CalendarTodayDayNumber" android:text="14" />
            <TextView android:id="@+id/day_number_3" style="@style/CalendarTodayDayNumber" android:text="15" />
            <TextView android:id="@+id/day_number_4" style="@style/CalendarTodayDayNumber" android:text="16" />
            <TextView android:id="@+id/day_number_5" style="@style/CalendarTodayDayNumber" android:text="17" />
            <TextView android:id="@+id/day_number_6" style="@style/CalendarTodayDayNumber" android:text="18" />
            <TextView android:id="@+id/day_number_7" style="@style/CalendarTodayDayNumber" android:text="19" />
        </LinearLayout>

        <!-- 分隔线 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_marginBottom="6dp" />

        <!-- 打卡项目区域（7列） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- 第1列（周一） -->
            <LinearLayout
                android:id="@+id/day_column_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="1dp">

                <!-- Day 1 打卡项目列表 -->
                <LinearLayout android:id="@+id/day1_checkin_1" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day1_badge_1" style="@style/CalendarTodayBadge" />
                    <TextView android:id="@+id/day1_name_1" style="@style/CalendarTodayItemName" />
                </LinearLayout>
                <LinearLayout android:id="@+id/day1_checkin_2" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day1_badge_2" style="@style/CalendarTodayBadge" />
                    <TextView android:id="@+id/day1_name_2" style="@style/CalendarTodayItemName" />
                </LinearLayout>
                <LinearLayout android:id="@+id/day1_checkin_3" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day1_badge_3" style="@style/CalendarTodayBadge" />
                    <TextView android:id="@+id/day1_name_3" style="@style/CalendarTodayItemName" />
                </LinearLayout>
                <LinearLayout android:id="@+id/day1_checkin_4" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day1_badge_4" style="@style/CalendarTodayBadge" />
                    <TextView android:id="@+id/day1_name_4" style="@style/CalendarTodayItemName" />
                </LinearLayout>
                <LinearLayout android:id="@+id/day1_checkin_5" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day1_badge_5" style="@style/CalendarTodayBadge" />
                    <TextView android:id="@+id/day1_name_5" style="@style/CalendarTodayItemName" />
                </LinearLayout>
                <LinearLayout android:id="@+id/day1_checkin_6" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day1_badge_6" style="@style/CalendarTodayBadge" />
                    <TextView android:id="@+id/day1_name_6" style="@style/CalendarTodayItemName" />
                </LinearLayout>
                <!-- 显示额外项目数量 -->
                <TextView android:id="@+id/day1_more_count" style="@style/CalendarTodayMoreCount" android:visibility="gone" />
            </LinearLayout>

            <!-- 第2列（周二） -->
            <LinearLayout
                android:id="@+id/day_column_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="1dp">

                <LinearLayout android:id="@+id/day2_checkin_1" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day2_badge_1" style="@style/CalendarTodayBadge" />
                    <TextView android:id="@+id/day2_name_1" style="@style/CalendarTodayItemName" />
                </LinearLayout>
                <LinearLayout android:id="@+id/day2_checkin_2" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day2_badge_2" style="@style/CalendarTodayBadge" />
                    <TextView android:id="@+id/day2_name_2" style="@style/CalendarTodayItemName" />
                </LinearLayout>
                <LinearLayout android:id="@+id/day2_checkin_3" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day2_badge_3" style="@style/CalendarTodayBadge" />
                    <TextView android:id="@+id/day2_name_3" style="@style/CalendarTodayItemName" />
                </LinearLayout>
                <LinearLayout android:id="@+id/day2_checkin_4" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day2_badge_4" style="@style/CalendarTodayBadge" />
                    <TextView android:id="@+id/day2_name_4" style="@style/CalendarTodayItemName" />
                </LinearLayout>
                <LinearLayout android:id="@+id/day2_checkin_5" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day2_badge_5" style="@style/CalendarTodayBadge" />
                    <TextView android:id="@+id/day2_name_5" style="@style/CalendarTodayItemName" />
                </LinearLayout>
                <LinearLayout android:id="@+id/day2_checkin_6" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day2_badge_6" style="@style/CalendarTodayBadge" />
                    <TextView android:id="@+id/day2_name_6" style="@style/CalendarTodayItemName" />
                </LinearLayout>
                <TextView android:id="@+id/day2_more_count" style="@style/CalendarTodayMoreCount" android:visibility="gone" />
            </LinearLayout>

            <!-- 第3列（周三） -->
            <LinearLayout
                android:id="@+id/day_column_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="1dp">

                <LinearLayout android:id="@+id/day3_checkin_1" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day3_badge_1" style="@style/CalendarTodayBadge" />
