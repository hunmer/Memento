                </LinearLayout>
                <LinearLayout android:id="@+id/day6_checkin_4" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day6_badge_4" style="@style/CalendarTodayBadge" />
                    <TextView android:id="@+id/day6_name_4" style="@style/CalendarTodayItemName" />
                </LinearLayout>
                <LinearLayout android:id="@+id/day6_checkin_5" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day6_badge_5" style="@style/CalendarTodayBadge" />
                    <TextView android:id="@+id/day6_name_5" style="@style/CalendarTodayItemName" />
                </LinearLayout>
                <LinearLayout android:id="@+id/day6_checkin_6" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day6_badge_6" style="@style/CalendarTodayBadge" />
                    <TextView android:id="@+id/day6_name_6" style="@style/CalendarTodayItemName" />
                </LinearLayout>
                <TextView android:id="@+id/day6_more_count" style="@style/CalendarTodayMoreCount" android:visibility="gone" />
            </LinearLayout>

            <!-- 第7列（周日） -->
            <LinearLayout
                android:id="@+id/day_column_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout android:id="@+id/day7_checkin_1" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day7_badge_1" style="@style/CalendarTodayBadge" />
                    <TextView android:id="@+id/day7_name_1" style="@style/CalendarTodayItemName" />
                </LinearLayout>
                <LinearLayout android:id="@+id/day7_checkin_2" style="@style/CalendarTodayCheckinItem" android:visibility="gone">
                    <TextView android:id="@+id/day7_badge_2" style="@style/CalendarTodayBadge" />
                    <TextView android:id="@+id/day7_name_2" style="@style/CalendarTodayItemName" />
