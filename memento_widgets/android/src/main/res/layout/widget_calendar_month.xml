<?xml version="1.0" encoding="utf-8"?>
<!-- 日历月视图小组件 - 左右两栏布局 -->
<!-- 左侧：月视图日历 | 右侧：当日事件列表 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendar_month_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- 左侧：日历区域 (约50%) -->
    <LinearLayout
        android:id="@+id/calendar_left_panel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="8dp">

        <!-- 月份导航栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- 上一月按钮 -->
            <TextView
                android:id="@+id/calendar_month_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="‹"
                android:textColor="#6B7280"
                android:textSize="18sp"
                android:paddingStart="4dp"
                android:paddingEnd="8dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- 月份名称 (绿色主题色) -->
            <TextView
                android:id="@+id/calendar_month_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="九月"
                android:textColor="#34D399"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- 下一月按钮 -->
            <TextView
                android:id="@+id/calendar_month_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="›"
                android:textColor="#6B7280"
                android:textSize="18sp"
                android:paddingStart="8dp"
                android:paddingEnd="4dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- 星期标题行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView style="@style/CalendarWeekdayText" android:text="一" />
            <TextView style="@style/CalendarWeekdayText" android:text="二" />
            <TextView style="@style/CalendarWeekdayText" android:text="三" />
            <TextView style="@style/CalendarWeekdayText" android:text="四" />
            <TextView style="@style/CalendarWeekdayText" android:text="五" />
            <TextView style="@style/CalendarWeekdayText" android:text="六" />
            <TextView style="@style/CalendarWeekdayText" android:text="日" />

        </LinearLayout>

        <!-- 日历网格容器 -->
        <LinearLayout
            android:id="@+id/calendar_grid_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 第1周 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <FrameLayout android:id="@+id/day_cell_1" style="@style/CalendarDayCell"><TextView android:id="@+id/day_1" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_1" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_2" style="@style/CalendarDayCell"><TextView android:id="@+id/day_2" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_2" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_3" style="@style/CalendarDayCell"><TextView android:id="@+id/day_3" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_3" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_4" style="@style/CalendarDayCell"><TextView android:id="@+id/day_4" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_4" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_5" style="@style/CalendarDayCell"><TextView android:id="@+id/day_5" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_5" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_6" style="@style/CalendarDayCell"><TextView android:id="@+id/day_6" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_6" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_7" style="@style/CalendarDayCell"><TextView android:id="@+id/day_7" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_7" style="@style/CalendarDayDot" /></FrameLayout>
            </LinearLayout>

            <!-- 第2周 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <FrameLayout android:id="@+id/day_cell_8" style="@style/CalendarDayCell"><TextView android:id="@+id/day_8" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_8" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_9" style="@style/CalendarDayCell"><TextView android:id="@+id/day_9" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_9" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_10" style="@style/CalendarDayCell"><TextView android:id="@+id/day_10" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_10" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_11" style="@style/CalendarDayCell"><TextView android:id="@+id/day_11" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_11" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_12" style="@style/CalendarDayCell"><TextView android:id="@+id/day_12" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_12" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_13" style="@style/CalendarDayCell"><TextView android:id="@+id/day_13" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_13" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_14" style="@style/CalendarDayCell"><TextView android:id="@+id/day_14" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_14" style="@style/CalendarDayDot" /></FrameLayout>
            </LinearLayout>

            <!-- 第3周 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <FrameLayout android:id="@+id/day_cell_15" style="@style/CalendarDayCell"><TextView android:id="@+id/day_15" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_15" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_16" style="@style/CalendarDayCell"><TextView android:id="@+id/day_16" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_16" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_17" style="@style/CalendarDayCell"><TextView android:id="@+id/day_17" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_17" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_18" style="@style/CalendarDayCell"><TextView android:id="@+id/day_18" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_18" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_19" style="@style/CalendarDayCell"><TextView android:id="@+id/day_19" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_19" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_20" style="@style/CalendarDayCell"><TextView android:id="@+id/day_20" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_20" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_21" style="@style/CalendarDayCell"><TextView android:id="@+id/day_21" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_21" style="@style/CalendarDayDot" /></FrameLayout>
            </LinearLayout>

            <!-- 第4周 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <FrameLayout android:id="@+id/day_cell_22" style="@style/CalendarDayCell"><TextView android:id="@+id/day_22" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_22" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_23" style="@style/CalendarDayCell"><TextView android:id="@+id/day_23" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_23" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_24" style="@style/CalendarDayCell"><TextView android:id="@+id/day_24" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_24" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_25" style="@style/CalendarDayCell"><TextView android:id="@+id/day_25" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_25" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_26" style="@style/CalendarDayCell"><TextView android:id="@+id/day_26" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_26" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_27" style="@style/CalendarDayCell"><TextView android:id="@+id/day_27" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_27" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_28" style="@style/CalendarDayCell"><TextView android:id="@+id/day_28" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_28" style="@style/CalendarDayDot" /></FrameLayout>
            </LinearLayout>

            <!-- 第5周 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <FrameLayout android:id="@+id/day_cell_29" style="@style/CalendarDayCell"><TextView android:id="@+id/day_29" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_29" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_30" style="@style/CalendarDayCell"><TextView android:id="@+id/day_30" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_30" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_31" style="@style/CalendarDayCell"><TextView android:id="@+id/day_31" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_31" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_32" style="@style/CalendarDayCell"><TextView android:id="@+id/day_32" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_32" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_33" style="@style/CalendarDayCell"><TextView android:id="@+id/day_33" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_33" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_34" style="@style/CalendarDayCell"><TextView android:id="@+id/day_34" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_34" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_35" style="@style/CalendarDayCell"><TextView android:id="@+id/day_35" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_35" style="@style/CalendarDayDot" /></FrameLayout>
            </LinearLayout>

            <!-- 第6周 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <FrameLayout android:id="@+id/day_cell_36" style="@style/CalendarDayCell"><TextView android:id="@+id/day_36" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_36" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_37" style="@style/CalendarDayCell"><TextView android:id="@+id/day_37" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_37" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_38" style="@style/CalendarDayCell"><TextView android:id="@+id/day_38" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_38" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_39" style="@style/CalendarDayCell"><TextView android:id="@+id/day_39" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_39" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_40" style="@style/CalendarDayCell"><TextView android:id="@+id/day_40" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_40" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_41" style="@style/CalendarDayCell"><TextView android:id="@+id/day_41" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_41" style="@style/CalendarDayDot" /></FrameLayout>
                <FrameLayout android:id="@+id/day_cell_42" style="@style/CalendarDayCell"><TextView android:id="@+id/day_42" style="@style/CalendarDayTextNew" /><View android:id="@+id/day_dot_42" style="@style/CalendarDayDot" /></FrameLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- 右侧：事件列表区域 (约50%) -->
    <LinearLayout
        android:id="@+id/calendar_right_panel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- 事件1 -->
        <LinearLayout
            android:id="@+id/event_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:visibility="gone">
            <View
                android:id="@+id/event_checkbox_1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/checkbox_unchecked"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:id="@+id/event_title_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textColor="#1F2937"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />
            <TextView
                android:id="@+id/event_time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#34D399"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 事件2 -->
        <LinearLayout
            android:id="@+id/event_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:visibility="gone">
            <View
                android:id="@+id/event_checkbox_2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/checkbox_unchecked"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:id="@+id/event_title_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textColor="#1F2937"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />
            <TextView
                android:id="@+id/event_time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#34D399"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 事件3 -->
        <LinearLayout
            android:id="@+id/event_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:visibility="gone">
            <View
                android:id="@+id/event_checkbox_3"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/checkbox_unchecked"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:id="@+id/event_title_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textColor="#1F2937"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />
            <TextView
                android:id="@+id/event_time_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#34D399"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 事件4 -->
        <LinearLayout
            android:id="@+id/event_item_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:visibility="gone">
            <View
                android:id="@+id/event_checkbox_4"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/checkbox_unchecked"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:id="@+id/event_title_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textColor="#1F2937"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />
            <TextView
                android:id="@+id/event_time_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#34D399"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 事件5 -->
        <LinearLayout
            android:id="@+id/event_item_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">
            <View
                android:id="@+id/event_checkbox_5"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/checkbox_unchecked"
                android:clickable="true"
                android:focusable="true" />
            <TextView
                android:id="@+id/event_title_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textColor="#1F2937"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />
            <TextView
                android:id="@+id/event_time_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#34D399"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 无事件提示 -->
        <TextView
            android:id="@+id/no_events_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="今日无事件"
            android:textColor="#9CA3AF"
            android:textSize="12sp"
            android:gravity="center"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>
