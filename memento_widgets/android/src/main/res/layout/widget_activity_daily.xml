<?xml version="1.0" encoding="utf-8"?>
<!-- 本日活动详细视图小组件 -->
<!-- 颜色配置说明：
     - widget_root: 背景色通过 backgroundTintList 动态设置
     - 文本颜色：主文本 #1F2937，次要文本 #6B7280
     - 强调色：通过 setTextColor 动态设置
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@drawable/widget_activity_daily_background">

    <!-- 配置提示文本（首次添加时显示） -->
    <TextView
        android:id="@+id/config_prompt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="点击配置小组件"
        android:textColor="#6B7280"
        android:textSize="14sp"
        android:visibility="gone" />

    <!-- 内容容器（已配置时显示） -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="visible">

        <!-- ========== 左侧：时间轴视图（40%宽度） ========== -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <!-- 上午/下午标题 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/label_am"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="上午"
                    android:textColor="#1F2937"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/label_pm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="下午"
                    android:textColor="#1F2937"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />
            </LinearLayout>

            <!-- 时间轴行容器（0-11点） -->
            <LinearLayout
                android:id="@+id/timeline_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- 0点行 -->
                <LinearLayout
                    android:id="@+id/hour_row_0"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <!-- 上午活动条 -->
                    <View
                        android:id="@+id/am_bar_0"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/widget_activity_daily_bar"
                        android:backgroundTint="#A2E0B5" />
                    <!-- 小时数字 -->
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#6B7280"
                        android:textSize="9sp"
                        android:gravity="center" />
