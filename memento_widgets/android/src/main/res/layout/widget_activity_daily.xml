                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="40"
                        android:textColor="#9CA3AF"
                        android:textSize="7sp"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="60"
                        android:textColor="#9CA3AF"
                        android:textSize="7sp"
                        android:gravity="end" />
                </LinearLayout>
            </LinearLayout>

            <!-- 底部统计区域 -->
            <LinearLayout
                android:id="@+id/stats_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <!-- 统计行1: 睡眠 -->
                <LinearLayout
                    android:id="@+id/stat_row_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp">
                    <View
                        android:id="@+id/stat_dot_1"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/widget_activity_daily_stat_dot"
                        android:backgroundTint="#A2E0B5" />
                    <TextView
                        android:id="@+id/stat_name_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="睡眠"
                        android:textColor="#6B7280"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/stat_duration_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.3h"
                        android:textColor="#1F2937"
                        android:textSize="10sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- 统计行2: 工作 -->
                <LinearLayout
                    android:id="@+id/stat_row_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp">
                    <View
                        android:id="@+id/stat_dot_2"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/widget_activity_daily_stat_dot"
                        android:backgroundTint="#FDD8D8" />
                    <TextView
                        android:id="@+id/stat_name_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="工作"
                        android:textColor="#6B7280"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/stat_duration_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6.2h"
                        android:textColor="#1F2937"
                        android:textSize="10sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- 统计行3: 娱乐 -->
                <LinearLayout
                    android:id="@+id/stat_row_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp">
                    <View
                        android:id="@+id/stat_dot_3"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/widget_activity_daily_stat_dot"
                        android:backgroundTint="#FCD34D" />
                    <TextView
                        android:id="@+id/stat_name_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="娱乐"
                        android:textColor="#6B7280"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/stat_duration_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.8h"
                        android:textColor="#1F2937"
                        android:textSize="10sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- 统计行4: 空白 -->
                <LinearLayout
                    android:id="@+id/stat_row_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp">
                    <View
                        android:id="@+id/stat_dot_4"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/widget_activity_daily_stat_dot"
                        android:backgroundTint="#E5E7EB" />
                    <TextView
                        android:id="@+id/stat_name_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="空白"
                        android:textColor="#6B7280"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/stat_duration_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4h"
                        android:textColor="#1F2937"
                        android:textSize="10sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 分隔线 -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="#E5E7EB" />

        <!-- ========== 右侧：日期导航 + 圆环进度图 + 活动列表（60%宽度） ========== -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <!-- 日期导航栏 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="4dp">

                <!-- 上一日按钮 -->
                <ImageView
                    android:id="@+id/btn_prev_day"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_media_previous"
                    android:scaleType="fitCenter"
                    android:contentDescription="上一日"
                    android:alpha="0.5" />

                <!-- 日期标题 -->
                <TextView
                    android:id="@+id/date_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="5月28日"
                    android:textColor="#1F2937"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- 下一日按钮 -->
                <ImageView
                    android:id="@+id/btn_next_day"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_media_next"
                    android:scaleType="fitCenter"
                    android:contentDescription="下一日"
                    android:alpha="0.5" />
            </LinearLayout>

            <!-- 圆环进度图区域 -->
            <FrameLayout
                android:id="@+id/progress_ring_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.45"
                android:gravity="center">

                <!-- 圆环进度图（使用ImageView，由Provider动态渲染） -->
                <ImageView
                    android:id="@+id/progress_ring"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:contentDescription="进度环" />

                <!-- 中心百分比文本 -->
                <TextView
                    android:id="@+id/progress_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="83%"
                    android:textColor="#1F2937"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- 活动列表 -->
            <ListView
                android:id="@+id/activity_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.55"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:scrollbars="none"
                android:paddingTop="4dp" />

            <!-- 空列表提示 -->
            <TextView
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.55"
                android:gravity="center"
                android:text="今日暂无活动"
                android:textColor="#9CA3AF"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
