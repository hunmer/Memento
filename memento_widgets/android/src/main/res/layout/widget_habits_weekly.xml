<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#FFF5F5F5">

    <!-- 配置提示文本(首次添加时显示) -->
    <TextView
        android:id="@+id/config_prompt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="点击设置小组件"
        android:textColor="#FF607AFB"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- 内容容器(已配置时显示) -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- 周导航栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="6dp">

            <!-- 上一周按钮 -->
            <ImageView
                android:id="@+id/btn_prev_week"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_media_previous"
                android:scaleType="fitCenter"
                android:contentDescription="上一周" />

            <!-- 周标题 -->
            <TextView
                android:id="@+id/week_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="第1周 01.06-01.12"
                android:textColor="#FF607AFB"
                android:textSize="12sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- 下一周按钮 -->
            <ImageView
                android:id="@+id/btn_next_week"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_media_next"
                android:scaleType="fitCenter"
                android:contentDescription="下一周" />
        </LinearLayout>

        <!-- 星期头部 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="66dp"
            android:paddingEnd="6dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="一"
                android:gravity="center"
                android:textColor="#99607AFB"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="二"
                android:gravity="center"
                android:textColor="#99607AFB"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="三"
                android:gravity="center"
                android:textColor="#99607AFB"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="四"
                android:gravity="center"
                android:textColor="#99607AFB"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="五"
                android:gravity="center"
                android:textColor="#99607AFB"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="六"
                android:gravity="center"
                android:textColor="#99607AFB"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="日"
                android:gravity="center"
                android:textColor="#99607AFB"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- 习惯列表 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ListView
                android:id="@+id/habit_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:scrollbars="vertical" />

            <!-- 空列表提示 -->
            <TextView
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="本周暂无习惯记录"
                android:textColor="#99607AFB"
                android:textSize="12sp"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
