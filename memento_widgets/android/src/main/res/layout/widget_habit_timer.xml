<?xml version="1.0" encoding="utf-8"?>
<!-- 习惯计时器小组件布局（2x2） -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_habit_timer_background"
    android:backgroundTint="#FFFFFF"
    android:gravity="center">

    <!-- 顶部区域：图标 + 名称 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">

        <!-- 图标容器（圆形背景） -->
        <LinearLayout
            android:id="@+id/habit_icon_container"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/habit_icon_background"
            android:backgroundTint="#E3F2FD"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/habit_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="fitCenter"
                android:contentDescription="Habit Icon" />
        </LinearLayout>

        <!-- 习惯名称 -->
        <TextView
            android:id="@+id/habit_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="背单词"
            android:textColor="#9E9E9E"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="start|center_vertical" />
    </LinearLayout>

    <!-- 中央区域：时间显示 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timer_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25:00"
            android:textColor="#1F2937"
            android:textSize="48sp"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="0.05"
            android:gravity="center" />
    </LinearLayout>

    <!-- 底部区域：播放按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="end|bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/play_pause_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_media_play"
            android:background="@drawable/play_button_background"
            android:backgroundTint="#10B981"
            android:scaleType="center"
            android:tint="#FFFFFF"
            android:contentDescription="Play/Pause Button" />
    </LinearLayout>

    <!-- 提示文本（未配置时显示） -->
    <TextView
        android:id="@+id/hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击设置小组件"
        android:textColor="#9E9E9E"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="24dp" />
</LinearLayout>
