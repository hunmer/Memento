<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#FFEFF7F0">

    <!-- 配置提示文本（首次添加时显示） -->
    <TextView
        android:id="@+id/config_prompt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="点击设置小组件"
        android:textColor="#FF607afb"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- 内容容器（已配置时显示） -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="visible">

        <!-- 左侧：热力图（40%宽度） -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:padding="4dp">

            <!-- 顶部星期标签（独立一行，不与热力图重叠） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_marginStart="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="一"
                    android:textColor="#FF607afb"
                    android:textSize="8sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="二"
                    android:textColor="#FF607afb"
                    android:textSize="8sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="三"
                    android:textColor="#FF607afb"
                    android:textSize="8sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="四"
                    android:textColor="#FF607afb"
                    android:textSize="8sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="五"
                    android:textColor="#FF607afb"
                    android:textSize="8sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="六"
                    android:textColor="#FF607afb"
                    android:textSize="8sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="日"
                    android:textColor="#FF607afb"
                    android:textSize="8sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- 热力图区域（包含左侧时间标签和热力图网格） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- 左侧时间标签 -->
                <LinearLayout
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="#FF607afb"
                        android:textSize="7sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="6"
                        android:textColor="#FF607afb"
                        android:textSize="7sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="12"
                        android:textColor="#FF607afb"
                        android:textSize="7sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="18"
                        android:textColor="#FF607afb"
                        android:textSize="7sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="24"
                        android:textColor="#FF607afb"
                        android:textSize="7sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- 热力图网格 -->
                <include
                    android:id="@+id/heatmap_container"
                    layout="@layout/widget_heatmap_grid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

        <!-- 右侧：周标题 + 标签列表（60%宽度） -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="4dp">

            <!-- 周导航栏 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:paddingBottom="8dp">

                <!-- 上一周按钮 -->
                <ImageView
                    android:id="@+id/btn_prev_week"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_media_previous"
                    android:scaleType="fitCenter"
                    android:contentDescription="上一周" />

                <!-- 周标题 -->
                <TextView
                    android:id="@+id/week_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第1周 1.01-1.07"
                    android:textColor="#FF607afb"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- 下一周按钮 -->
                <ImageView
                    android:id="@+id/btn_next_week"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_media_next"
                    android:scaleType="fitCenter"
                    android:contentDescription="下一周" />
            </LinearLayout>

            <!-- 活动标签列表 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ListView
                    android:id="@+id/activity_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:scrollbars="none" />

                <!-- 空列表提示 -->
                <TextView
                    android:id="@+id/empty_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="本周暂无活动"
                    android:textColor="#99607afb"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
