<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 日历日期样式 -->
    <style name="CalendarDayText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#1f2937</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- 周视图小组件 - 星期标题样式 -->
    <style name="WeeklyWidgetWeekTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#6b7280</item>
    </style>

    <!-- 周视图小组件 - 日期数字样式 -->
    <style name="WeeklyWidgetDayNumber">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1f2937</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 周视图小组件 - 打卡项目容器样式 -->
    <style name="WeeklyWidgetItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/widget_checkin_item_background</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <!-- 周视图小组件 - 打卡次数徽章样式 -->
    <style name="WeeklyWidgetBadge">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/widget_checkin_badge_background</item>
    </style>

    <!-- 周视图小组件 - 打卡项目名称样式 -->
    <style name="WeeklyWidgetName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#1f2937</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
