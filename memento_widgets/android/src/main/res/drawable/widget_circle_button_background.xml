<?xml version="1.0" encoding="utf-8"?>
<!-- 圆形按钮背景（白色带边框） -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影层 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#08000000" />
        </shape>
    </item>
    <!-- 按钮主体 -->
    <item
        android:bottom="1dp"
        android:right="1dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" />
        </shape>
    </item>
</layer-list>
