<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/widget_background">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/launcher_icon"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="快速发送"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- 频道列表 (最多3个) -->
    <LinearLayout
        android:id="@+id/channel_list_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 频道项1 -->
        <LinearLayout
            android:id="@+id/channel_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/channel_icon_1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/channel_icon_background"
                android:gravity="center"
                android:fontFamily="@font/material_icons_regular"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/channel_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="频道1"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/channel_preview_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最后一条消息..."
                    android:textSize="12sp"
                    android:textColor="#CCCCCC"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>

        <!-- 频道项2 -->
        <LinearLayout
            android:id="@+id/channel_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/channel_icon_2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/channel_icon_background"
                android:gravity="center"
                android:fontFamily="@font/material_icons_regular"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/channel_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="频道2"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/channel_preview_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最后一条消息..."
                    android:textSize="12sp"
                    android:textColor="#CCCCCC"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>

        <!-- 频道项3 -->
        <LinearLayout
            android:id="@+id/channel_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/channel_icon_3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/channel_icon_background"
                android:gravity="center"
                android:fontFamily="@font/material_icons_regular"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/channel_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="频道3"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/channel_preview_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最后一条消息..."
                    android:textSize="12sp"
                    android:textColor="#CCCCCC"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 新建频道按钮 -->
    <Button
        android:id="@+id/new_channel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ 选择频道"
        android:textSize="12sp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF" />

</LinearLayout>
